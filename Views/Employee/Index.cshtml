@model IEnumerable<payroll.Models.EmployeeModel>
@{
    ViewData["Title"] = "Employee List";
}

<h2>Employee List</h2>

<a class="btn btn-primary" href="@Url.Action("Create")">Add New Employee</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Salary</th>
            <th>Status</th>
            <th>Joining Date</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Salary</td>
                <td>@employee.Status</td>
                <td>@employee.JoiningDate.ToShortDateString()</td>
                <td>@employee.Department?.Name</td>
                <td>
                    <a class="btn btn-warning" href="@Url.Action("Edit", new { id = employee.Id })">Edit</a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", new { id = employee.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
