@model payroll.Models.EmployeeModel

@{
    ViewData["Title"] = "Add Employee";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Employee Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Enter Employee Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Salary">Salary</label>
        <input type="number" class="form-control" asp-for="Salary" placeholder="Enter Salary" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Status">Status</label>
        <select class="form-control" asp-for="Status">
            <option value="true">Active</option>
            <option value="false">Inactive</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="JoiningDate">Joining Date</label>
        <input type="date" class="form-control" asp-for="JoiningDate" />
        <span asp-validation-for="JoiningDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="DepartmentId">Department</label>
        <select class="form-control" asp-for="DepartmentId" asp-items="@(ViewBag.Departments)">
            <option value="">Select Department</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Add Employee</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
