@model payroll.Models.EmployeeModel
@{
    ViewData["Title"] = Model.Id == 0 ? "Create Employee" : "Edit Employee";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Salary">Salary</label>
        <input type="number" class="form-control" asp-for="Salary" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Status">Status</label>
        <select class="form-control" asp-for="Status">
            <option value="true">Active</option>
            <option value="false">Inactive</option>
        </select>
    </div>

    <div class="form-group">
        <label for="JoiningDate">Joining Date</label>
        <input type="date" class="form-control" asp-for="JoiningDate" />
        <span asp-validation-for="JoiningDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="DepartmentId">Department</label>
        <select class="form-control" asp-for="DepartmentId"
            asp-items="@(ViewBag.Departments != null ? ViewBag.Departments : new SelectList(Enumerable.Empty<SelectListItem>()))">
            <option value="">Select a department</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
